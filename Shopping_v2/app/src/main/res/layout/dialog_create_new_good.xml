<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/dialog_create_new_good_edt_txt_tags"
        android:hint="@string/create_new_good_alert_dialog_edt_txt_tags_hint_value"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/create_new_good_alert_dialog_txt_unit_of_measure_value"
        android:textSize="@dimen/text_view_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_create_new_good_edt_txt_tags"
        android:layout_alignStart="@+id/dialog_create_new_good_edt_txt_tags"
        android:layout_marginTop="25dp"
        android:id="@+id/dialog_create_new_good_txt_unit_of_measure_label" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_create_new_good_spn_unit_of_measure"
        android:layout_toEndOf="@+id/dialog_create_new_good_txt_unit_of_measure_label"
        android:layout_alignBaseline="@+id/dialog_create_new_good_txt_unit_of_measure_label"
        android:layout_marginStart="10dp" />




</RelativeLayout>
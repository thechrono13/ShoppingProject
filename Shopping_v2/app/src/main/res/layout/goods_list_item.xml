<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_list_item_name_txt_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="Quantity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/goods_list_item_quantity_label_txt_view"
            android:layout_below="@+id/goods_list_item_name_txt_view"
            android:layout_alignStart="@+id/goods_list_item_name_txt_view" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_quantity_label_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_quantity_label_txt_view"
            android:layout_marginStart="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="3dp"
            android:id="@+id/goods_list_item_quantity_value_txt_view" />
        <TextView
            android:text="Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_quantity_value_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_quantity_value_txt_view"
            android:id="@+id/goods_list_item_unit_of_measure_txt_view" />

        <TextView
            android:text="Prezzo Unitario"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goods_list_item_quantity_label_txt_view"
            android:layout_alignStart="@+id/goods_list_item_quantity_label_txt_view"
            android:layout_marginTop="20dp"
            android:id="@+id/goods_list_item_price_per_unit_label_txt_view" />

        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_price_per_unit_label_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_price_per_unit_label_txt_view"
            android:layout_marginStart="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="3dp"
            android:id="@+id/goods_list_item_price_per_unit_value_txt_view" />

        <TextView
            android:text="€/Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_price_per_unit_value_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_price_per_unit_value_txt_view"
            android:id="@+id/goods_list_item_price_per_unit_currency_txt_view" />


        <TextView
            android:text="Prezzo:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_price_per_unit_currency_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_price_per_unit_currency_txt_view"
            android:layout_marginStart="20dp"
            android:id="@+id/goods_list_item_price_label_txt_view" />


        <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_price_label_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_price_label_txt_view"
            android:layout_marginStart="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="3dp"
            android:id="@+id/goods_list_item_price_value_txt_view" />



        <TextView
            android:text="€"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_list_item_price_value_txt_view"
            android:layout_toEndOf="@+id/goods_list_item_price_value_txt_view"
            android:id="@+id/goods_list_item_price_currency_txt_view" />


    </RelativeLayout>

</android.support.v7.widget.CardView>